{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "docker-build",
        "annotations": {
            "openshift.io/display-name": "Docker Build Template",
            "description": "A Docker BuildConfig and associate ImageStream",
            "iconClass": "fa-cube",
            "tags": "s2i"
        }
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "BuildConfig",
            "metadata": {
                "annotations": {},
                "labels": {
                    "build": "${NAME}"
                },
                "name": "${NAME}"
            },
            "spec": {
                "failedBuildsHistoryLimit": 5,
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${NAME}:latest"
                    }
                },
                "postCommit": {},
                "resources": {},
                "runPolicy": "Serial",
                "source": {
                    "contextDir": "${SOURCE_CONTEXT_DIR}",
                    "git": {
                        "uri": "${SOURCE_REPOSITORY_URL}",
                        "ref": "${SOURCE_REPOSITORY_REF}"
                    },
                    "type": "Git"
                },
                "strategy": {
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${BASE_IMAGE}",
                            "namespace": "${BASE_IMAGE_NAMESPACE}"
                        }
                    },
                    "type": "Docker"
                },
                "successfulBuildsHistoryLimit": 5,
                "triggers": [
                    {
                        "github": {
                            "secret": "${GITHUB_WEBHOOK_SECRET}"
                        },
                        "type": "GitHub"
                    },
                    {
                        "generic": {
                            "secret": "${GENERIC_WEBHOOK_SECRET}"
                        },
                        "type": "Generic"
                    },
                    {
                        "imageChange": {},
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "ImageStream",
            "metadata": {
                "labels": {
                    "build": "${NAME}"
                },
                "name": "${NAME}"
            },
            "spec": {}
        }
    ],
    "parameters": [
        {
            "name": "NAME",
            "displayName": "Name",
            "description": "The name assigned to docker build and associated imagestream",
            "required": true,
            "value": "docker"
        },
        {
            "name": "SOURCE_REPOSITORY_URL",
            "displayName": "Git Repository URL",
            "description": "The URL of the repository with your docker build",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY_REF",
            "displayName": "Git Reference",
            "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default (master) branch.",
            "value": "master"
        },
        {
            "name": "SOURCE_CONTEXT_DIR",
            "displayName": "The directory in the git repo where the docker build resides",
            "description": "Set this to the directory where the docker build is if not using the default root directory"
        },
        {
            "name": "BASE_IMAGE",
            "displayName": "S2I Base Image for Docker Build",
            "description": "The base image to be used by the Docker Build, including version tag",
            "required": true,
            "value": "redhat-openjdk18-openshift:latest"
        },
        {
            "name": "BASE_IMAGE_NAMESPACE",
            "displayName": "The namespace for the base image",
            "description": "The namespace for the base image",
            "required": true,
            "value": "openshift"
        },
        {
            "description": "GitHub trigger secret",
            "displayName": "Github Webhook Secret",
            "from": "[a-zA-Z0-9]{8}",
            "generate": "expression",
            "name": "GITHUB_WEBHOOK_SECRET",
            "required": true
        },
        {
            "description": "Generic build trigger secret",
            "displayName": "Generic Webhook Secret",
            "from": "[a-zA-Z0-9]{8}",
            "generate": "expression",
            "name": "GENERIC_WEBHOOK_SECRET",
            "required": true
        }
    ],
    "labels": {
        "template": "docker-build"
    }
}